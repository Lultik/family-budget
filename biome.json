{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 90,
    "ignore": ["*generated/*.ts"]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "files": {
    "ignore": [
      "bruno*",
      ".pnpm-store",
      "dist/**",
      "terraform/**",
      "node_modules/**",
      "build/**",
      "docs/**",
      ".turbo/**",
      "apps/web/**",
      "packages/ui/**",
      "coverage/**"
    ]
  }
}
